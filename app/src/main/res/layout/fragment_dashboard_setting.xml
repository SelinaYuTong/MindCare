<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D6F5FF"
    tools:context=".DashboardSettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/raleway_bold"
            android:text="Settings"
            android:textAlignment="center"
            android:textColor="@color/black_overlay"
            android:textSize="48sp" />

        <ImageView
            android:id="@+id/appearanceBtn"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@color/light_yellow"
            android:maxWidth="300dp"
            android:src="@drawable/setting_row" />

        <ImageView
            android:id="@+id/languageBtn"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@color/light_orange"
            android:backgroundTintMode="add"
            android:src="@drawable/setting_row__1_" />

        <ImageView
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@color/light_yellow"
            android:backgroundTintMode="add"
            android:src="@drawable/setting_row__2_" />

        <ImageView
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@color/light_orange"
            android:backgroundTintMode="add"
            android:src="@drawable/setting_row__6_" />

        <ImageView
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@color/light_yellow"
            android:backgroundTintMode="add"
            android:src="@drawable/setting_row__7_" />

        <ImageView
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@color/light_orange"
            android:backgroundTintMode="add"
            android:src="@drawable/setting_row__8_" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>